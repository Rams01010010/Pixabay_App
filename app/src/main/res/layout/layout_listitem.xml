<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardBackgroundColor="@color/cardColor"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageIV"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ic_launcher_background" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal"
            android:paddingLeft="8dp"
            android:paddingRight="8dp">

            <TextView
                android:id="@+id/viewsTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_views"
                android:drawablePadding="8dp"
                android:drawableTint="@color/primaryAccentcolor"
                android:gravity="center_vertical"
                android:padding="3dp"
                android:text="123456"
                android:textColor="@color/primaryAccentcolor" />

            <TextView
                android:id="@+id/likesTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_like_fill"
                android:drawablePadding="8dp"
                android:drawableTint="@color/primaryAccentcolor"
                android:gravity="center_vertical"
                android:padding="3dp"
                android:text="12345"
                android:textColor="@color/primaryAccentcolor" />

            <TextView
                android:id="@+id/downloadsTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/ic_downloads"
                android:drawablePadding="8dp"
                android:drawableTint="@color/primaryAccentcolor"
                android:gravity="center_vertical"
                android:padding="3dp"
                android:text="1234"
                android:textColor="@color/primaryAccentcolor" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                app:cardBackgroundColor="@color/cardColor"
                app:cardElevation="0dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/userImageIV"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/nodp" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/userNameTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:text="TextView"
                    android:textColor="@color/primaryAccentcolor" />

                <TextView
                    android:id="@+id/userIdTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:text="TextView"
                    android:textColor="@color/secondaryAccentcolor" />
            </LinearLayout>

            <ImageView
                android:id="@+id/likesIV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:paddingRight="16sp"
                android:src="@drawable/ic_like_outline"
                android:tag="false"
                android:visibility="visible"
                app:tint="@color/primaryAccentcolor" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>